@model s3cr3tx.Pages.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "s3cr3tx : helping you protect secrets in code";
}
@section Members{
    <partial name="_LoginRegisterPartial" />
}
<br/>
<div class="text-center">
    <center> <h3 class="display-6">Login to <b>s3cr3tx</b></h3></center>
    <form asp-page-handler="view" formaction="post">
        <center>
            <table>
                <tr>
                    <td align="right">
                        <label id="lblEmail">Email: </label>
                    </td>
                    <td>
                        <input id="txtEmail" asp-for="loginCurrent.member_email" maxlength="256" />
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <label id="lblToken">Password: </label>
                    </td>
                    <td>
                        <input id="txtToken" maxlength="256" asp-for="loginCurrent.member_code" />
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <label id="lblInput">&nbsp;</label>
                    </td>
                    <td>
                        <input id="btnSubmit" type="submit" disabled="disabled" />
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <label id="lblInput">&nbsp;</label>
                    </td>
                    <td>
                        <h4>
                            <a href="http://localhost:8001/Register">Register</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <a href="http://localhost:8001/Forgot">Forgot Password</a>
                        </h4>
                    </td>
                </tr>
            </table>
        </center>
        <br />
    </form>
    
</div>
